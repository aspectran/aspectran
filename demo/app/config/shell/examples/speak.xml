<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE aspectran PUBLIC "-//ASPECTRAN//DTD Aspectran Configuration 6.0//EN"
        "http://aspectran.github.io/dtd/aspectran-6.dtd">
<aspectran>

    <description>
        Simple program to demonstrate the use of the FreeTTS speech synthesizer.
    </description>

    <bean id="speaker" class="com.aspectran.demo.tts.TextToSpeechBean">
        <properties>
            <item name="properties" type="properties">
                <value name="freetts.voices">com.sun.speech.freetts.en.us.cmu_us_kal.KevinVoiceDirectory</value>
            </item>
            <item name="voiceName">kevin16</item>
        </properties>
    </bean>

    <translet name="speak">
        <description style="apon">
            |
            |   Converts any written text into spoken words.
            |   If your system's audio works well, it will speak the text
            |   you type.
            |
        </description>
        <request>
            <parameters>
                <item name="text"/>
            </parameters>
        </request>
        <action bean="speaker" method="speak">
            <arguments>
                <item>${text:Hello}</item>
            </arguments>
        </action>
        <transform type="transform/text">
            <template>${text}</template>
        </transform>
    </translet>

    <translet name="speak ${text}">
        <description style="apon">
            |
            |   To call this translet, type "speak [TEXT]".
            |   If your system's audio works well, it will speak the text
            |   you type.
            |
        </description>
        <action bean="speaker" method="speak">
            <arguments>
                <item>${text:Hello}</item>
            </arguments>
        </action>
        <transform type="transform/text">
            <template>${text}</template>
        </transform>
    </translet>

</aspectran>