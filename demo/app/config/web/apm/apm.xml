<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE aspectran PUBLIC "-//ASPECTRAN//DTD Aspectran 6.0//EN"
        "http://aspectran.github.io/dtd/aspectran-6.dtd">
<aspectran>

    <settings>
        <setting name="transletNamePrefix" value="/apm"/>
    </settings>

    <translet name="/">
        <echo id="page">
            <item name="headline">Application Performance Monitoring</item>
            <item name="teaser">Analyze application logging messages to visually express the frequency of web requests based on the user's session usage history.</item>
            <item name="include">apm/apm</item>
            <item name="style">fluid</item>
        </echo>
        <dispatch name="templates/default"/>
    </translet>

    <bean id="logTailerManager" class="com.aspectran.demo.apm.log.LogTailerManager">
        <arguments>
            <item>#{class:com.aspectran.demo.apm.log.LogtailEndpoint}</item>
            <item type="array">
                <bean class="com.aspectran.demo.apm.log.LogTailer">
                    <arguments>
                        <item>app-log</item>
                        <item>#{basePath}/logs/app.log</item>
                    </arguments>
                </bean>
            </item>
        </arguments>
    </bean>

</aspectran>