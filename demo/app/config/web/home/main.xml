<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE aspectran PUBLIC "-//ASPECTRAN//DTD Aspectran 7.0//EN"
        "http://aspectran.github.io/dtd/aspectran-7.dtd">
<aspectran>

    <description>
        A collection of Translets for the main page.
    </description>

    <translet name="/">
        <echo id="page">
            <item name="headline">Welcome to the Aspectran Demo Site</item>
            <item name="teaser">This is a website for demonstrating some recommended best practices developed with Aspectran.</item>
            <item name="include">home/main</item>
            <item name="style">plate solid</item>
        </echo>
        <dispatch name="templates/default"/>
    </translet>

</aspectran>