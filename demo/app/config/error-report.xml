<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE aspectran PUBLIC "-//ASPECTRAN//DTD Aspectran 9.0//EN"
        "https://aspectran.com/dtd/aspectran-9.dtd">
<aspectran>

    <aspect id="errorReport">
        <description>
            If an unexpected error occurs during translet processing,
            a simple error message is printed.
        </description>
        <exception>
            <thrown>
                <transform format="text">
                    <template style="apon">
                        |An Error Occurred!
                        |#{currentTranslet^rootCauseOfRaisedException}
                    </template>
                </transform>
            </thrown>
        </exception>
    </aspect>

</aspectran>
