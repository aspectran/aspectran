<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE aspectran PUBLIC "-//ASPECTRAN//DTD Aspectran Configuration 4.0//EN"
                           "http://aspectran.github.io/dtd/aspectran-4.dtd">

<aspectran>

    <description>
        A collection of Translets for the main page.
    </description>

    <translet name="/">
        <dispatch name="template">
            <echo id="page">
                <attributes>
                    <item name="headline">Welcome to Aspectran Demo Application</item>
                    <item name="teaser">The "Aspectran Demo Application" is a reference application created to show how to develop Aspectran applications following the recommended best practices.</item>
                    <item name="include">pages/main</item>
                </attributes>
            </echo>
        </dispatch>
    </translet>

</aspectran>