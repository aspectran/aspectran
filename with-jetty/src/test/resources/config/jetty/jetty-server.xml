<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE aspectran PUBLIC "-//ASPECTRAN//DTD Aspectran 8.0//EN"
        "http://aspectran.github.io/dtd/aspectran-8.dtd">
<aspectran>

    <description>
        An Aspectran configuration for Embedded Jetty Server.
    </description>

    <environment>
        <properties>
            <item name="jetty.server.startup" value="false" valueType="boolean"/>
            <item name="jetty.server.shutdownGracefully" value="true" valueType="boolean"/>
            <item name="jetty.server.port" value="8099" valueType="int"/>
            <item name="jetty.server.minThreads" value="3" valueType="int"/>
            <item name="jetty.server.maxThreads" value="10" valueType="int"/>
            <item name="jetty.server.maxConnections" value="9999" valueType="int"/>
            <item name="jetty.session.dataStoreDir" value="#{basePath}/work/_sessions/jetty"/>
            <item name="jetty.gzip.minGzipSize" value="20000" valueType="int"/>
            <item name="jetty.gzip.syncFlush" value="false" valueType="boolean"/>
            <item name="jetty.gzip.includedMethodList" value="GET"/>
            <item name="jetty.gzip.excludedMethodList" value=""/>
        </properties>
    </environment>

    <bean id="jetty.server" class="com.aspectran.jetty.JettyServer">
        <arguments>
            <item name="threadPool">
                <bean class="org.eclipse.jetty.util.thread.QueuedThreadPool">
                    <properties>
                        <item name="minThreads">%{jetty.server.minThreads}</item>
                        <item name="maxThreads">%{jetty.server.maxThreads}</item>
                    </properties>
                </bean>
            </item>
        </arguments>
        <properties>
            <item name="autoStart">%{jetty.server.startup}</item>
            <item name="shutdownGracefully">%{jetty.server.shutdownGracefully}</item>
            <item name="maxConnections">%{jetty.server.maxConnections}</item>
            <item name="connectors" type="array">
                <bean class="org.eclipse.jetty.server.ServerConnector">
                    <arguments>
                        <item>#{jetty.server}</item>
                    </arguments>
                    <properties>
                        <item name="port">%{jetty.server.port}</item>
                        <item name="connectionFactories" type="list">
                            <value>#{jetty.connectionFactory}</value>
                        </item>
                    </properties>
                </bean>
            </item>
            <item name="handler">
                <value>#{jetty.mainHandler}</value>
            </item>
            <item name="requestLog">
                <value>#{jetty.requestLog}</value>
            </item>
        </properties>
    </bean>

    <bean id="jetty.connectionFactory" class="org.eclipse.jetty.server.HttpConnectionFactory" scope="prototype">
        <arguments>
            <item>
                <bean class="org.eclipse.jetty.server.HttpConfiguration">
                    <properties>
                        <item name="customizers" type="list">
                            <bean class="org.eclipse.jetty.server.ForwardedRequestCustomizer"/>
                        </item>
                    </properties>
                </bean>
            </item>
        </arguments>
    </bean>

    <bean id="jetty.mainHandler" class="org.eclipse.jetty.server.handler.StatisticsHandler" scope="prototype">
        <arguments>
            <item>
                <bean class="org.eclipse.jetty.server.handler.gzip.GzipHandler">
                    <arguments>
                        <item>
                            <value>#{jetty.handlerCollection}</value>
                        </item>
                    </arguments>
                    <properties>
                        <item name="minGzipSize" valueType="int">%{jetty.gzip.minGzipSize}</item>
                        <item name="syncFlush" valueType="boolean">%{jetty.gzip.syncFlush}</item>
                        <item name="includedMethodList">%{jetty.gzip.includedMethodList}</item>
                        <item name="excludedMethodList">%{jetty.gzip.excludedMethodList}</item>
                    </properties>
                </bean>
            </item>
        </arguments>
    </bean>

    <bean id="jetty.handlerCollection" class="org.eclipse.jetty.server.handler.ContextHandlerCollection" scope="prototype">
        <arguments>
            <item valueType="boolean">false</item>
            <item type="array">
                <bean class="com.aspectran.jetty.JettyWebAppContext">
                    <properties>
                        <item name="contextPath">/</item>
                        <item name="war">#{basePath}/webroot</item>
                        <item name="tempDirectoryPersistent" valueType="boolean">false</item>
                        <item name="defaultsDescriptor">config/jetty/webdefault-ee10.xml</item>
                        <item name="sessionHandler">#{jetty.sessionHandler}</item>
                        <item name="webSocketInitializer">
                            <bean class="com.aspectran.jetty.JettyWebSocketInitializer">
                                <properties>
                                    <item name="idleTimeout" valueType="long">60000</item>
                                </properties>
                            </bean>
                        </item>
                    </properties>
                </bean>
            </item>
        </arguments>
    </bean>

    <bean id="jetty.sessionHandler" class="com.aspectran.jetty.JettySessionHandler" scope="prototype">
        <properties>
            <item name="sessionDataStore">
                <bean class="org.eclipse.jetty.session.FileSessionDataStoreFactory">
                    <properties>
                        <item name="storeDir" valueType="file">%{jetty.session.dataStoreDir}</item>
                        <item name="deleteUnrestorableFiles" valueType="boolean">true</item>
                    </properties>
                </bean>
            </item>
        </properties>
    </bean>

    <bean id="jetty.requestLog" class="org.eclipse.jetty.server.CustomRequestLog" scope="prototype">
        <arguments>
            <item>
                <bean class="org.eclipse.jetty.server.Slf4jRequestLogWriter">
                    <properties>
                        <item name="loggerName">org.eclipse.jetty.server.RequestLog</item>
                    </properties>
                </bean>
            </item>
            <item>%{client}a - %u %t "%r" %s %O "%{Referer}i" "%{User-Agent}i"</item>
        </arguments>
    </bean>

