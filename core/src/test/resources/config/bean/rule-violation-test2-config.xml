<aspectran>

    <translet name="chooseWhenTest">
        <choose>
            <when test="mode == 'cond1'">
                <choose>
                    <when test="mode == 'cond2'">
                        <choose>
                            <when test="mode == 'cond3'">
                                <echo>
                                    <item name="aa">bb</item>
                                </echo>
                            </when>
                        </choose>
                    </when>
                </choose>
            </when>
        </choose>
    </translet>

</aspectran>