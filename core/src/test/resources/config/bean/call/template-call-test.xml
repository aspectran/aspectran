<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE aspectran PUBLIC "-//ASPECTRAN//DTD Aspectran 8.0//EN"
        "http://aspectran.github.io/dtd/aspectran-8.dtd">
<aspectran>

    <description>
        This is an Aspectran configuration for testing template calls.
    </description>

    <template id="template-1">TEMPLATE-1</template>

    <template id="template-2">~{template-1}</template>

    <template id="template-3" style="apon">
        |TEMPLATE-3
    </template>

    <template id="template-4">~{template-3}</template>

    <template id="aponStyle" style="apon">
        |line-1
        |line-2
        |line-3
    </template>

    <template id="compactStyle" style="compact">
        line-1
        line-2
        line-3
    </template>

    <template id="compressedStyle" style="compressed">
        line-1
        line-2
        line-3
    </template>

    <template id="aspectranVersion" style="compressed">
        #{class:com.aspectran.core.AboutMe^version}
    </template>

</aspectran>