context: {
    base: ./target/test-classes
    rules: /WEB-INF/aspectran/config/test-root.xml
    encoding: utf-8
    resources: [
        /WEB-INF/aspectran/config
    ]
    profiles: {
        active: dev, stage, prod
    }
    autoReload: {
        scanIntervalSeconds: 5
        enabled: false
    }
}
scheduler: {
    startDelaySeconds: 3
    waitOnShutdown: true
    enabled: false
}
shell: {
    style: {
         primary: GRAY
         secondary: green
         success: CYAN
         danger: red
         warning: YELLOW
         info: cyan
    }
    prompt: "{{BLUE}}aspectran-demo-app{{YELLOW,bold}}>{{reset}} "
    verbose: true
    greetings: (
        |
        |
        |   {{bold}}--- Aspectran Demo Application ---{{bold:off}}

        |   ======================================================
        |
        |

    )
    exposals: {
        -: /**
        +: ""
        +: " "
        +:
    }
}
web: {
    uriDecoding: utf-8
    defaultServletName: default
    exposals: {
        +: /**
    }
}