<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%-5level %relative [%thread] %msg - %logger{30}.%M\(%line\)%n</pattern>
        </encoder>
    </appender>
    <Logger name="com.aspectran" level="debug" additivity="false">
        <appender-ref ref="STDOUT"/>
    </Logger>

    <!-- Logger for EclipseLink -->
    <logger name="org.eclipse.persistence.logging.sql" level="DEBUG"/>

    <!-- Logger for Hibernate -->
    <logger name="org.hibernate.SQL" level="DEBUG"/>
    <logger name="org.hibernate.type.descriptor.sql" level="TRACE"/>

    <root level="info">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>